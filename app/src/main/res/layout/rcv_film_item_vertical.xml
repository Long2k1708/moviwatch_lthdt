<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_movie_banner_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/imv_movie_banner"
            android:layout_width="100dp"
            android:layout_height="160dp"/>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cardview_movie_banner_container">
        <TextView
            android:id="@+id/tv_film_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Title"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:layout_below="@id/tv_film_title"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imv_icon_view_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_view_count" />

            <TextView
                android:id="@+id/tv_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:text="69"
                android:layout_toRightOf="@id/imv_icon_view_count"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/imv_icon_time_length"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_view_count"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_film_time_length" />

            <TextView
                android:id="@+id/tv_time_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:text="69 phÃºt"
                android:layout_toRightOf="@id/imv_icon_time_length"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>